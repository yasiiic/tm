<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
     android:background="@drawable/background">

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="270dp"
        android:id="@+id/shirtmainbutton"
        android:layout_marginTop="220dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:background="@drawable/shirtmain"
        android:onClick="ButtonOnClick" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:id="@+id/hoodiemainbutton"
        android:layout_alignTop="@+id/shirtmainbutton"
        android:layout_toRightOf="@+id/shirtmainbutton"
        android:src="@drawable/hoodiemain"
        android:clickable="false"
        android:onClick="ButtonOnClickTwo" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:id="@+id/lanyardmainbutton"
        android:src="@drawable/lanyardmain"
        android:layout_toRightOf="@+id/hoodiemainbutton"
        android:layout_alignTop="@+id/hoodiemainbutton"
        android:onClick="ButtonOnClickThree" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Shirt"
        android:textSize="25dp"
        android:textColor="#fffdffff"
        android:textIsSelectable="false"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/hoodiemainbutton"
        android:background="#ff000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Hoodie"
        android:textSize="25dp"
        android:textColor="#fffdffff"
        android:textIsSelectable="false"
        android:background="#ff000000"
        android:layout_alignTop="@+id/editText"
        android:layout_alignRight="@+id/hoodiemainbutton"
        android:layout_alignEnd="@+id/hoodiemainbutton"
        android:layout_toRightOf="@+id/shirtmainbutton"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Lanyard"
        android:textSize="25dp"
        android:textColor="#fffdffff"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff000000"
        android:layout_toRightOf="@+id/hoodiemainbutton"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/header1"
        android:background="@drawable/header1"
        android:layout_gravity="center"
        android:layout_alignWithParentIfMissing="true" />


</RelativeLayout>

